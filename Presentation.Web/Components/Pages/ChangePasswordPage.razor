@page "/user/change-password"
@using Api.Definitions.Generated
@using Api.Definitions.Requests.Commands
@using Presentation.Web.Services
@inject CommandSender CommandSender
@inject NavigationManager NavigationManager
@inject IPasswordGenerator PasswordGenerator
@inject ISnackbar Snackbar
@inject IJSRuntime JsRuntime

<MudContainer MaxWidth="MaxWidth.Small"
              Class="d-flex flex-column align-center justify-center my-auto py-2"
              Style="flex-grow: 1;">

    <MudPaper Elevation="4"
              Class="pa-4 pa-sm-6 rounded-lg"
              Style="width: 100%; max-height: 95dvh; display: flex; flex-direction: column;">

        <div class="text-center mb-4">
            <MudIcon Icon="@Icons.Material.Filled.LockOpen" Color="Color.Primary" Size="Size.Medium"/>
            <MudText Typo="Typo.h6" Class="fw-bold">Change Your Password</MudText>
        </div>

        <div style="overflow-y: auto; flex-grow: 1; padding: 4px;" class="hide-scrollbar">
            <EditForm Model="@_model" OnValidSubmit="HandlePasswordChange">
                <DataAnnotationsValidator/>

                <MudGrid Spacing="2">
                    <MudItem xs="12">
                        <MudTextField @bind-Value="_model.OldPassword"
                                      Label="Current Password"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      InputType="InputType.Password"
                                      Required="true"/>
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField @bind-Value="_model.OldPasswordConfirm"
                                      Label="Confirm Current Password"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      InputType="InputType.Password"
                                      Required="true"/>
                    </MudItem>

                    <MudItem xs="12" Class="mt-4">
                        <MudTextField @bind-Value="_newPassword"
                                      Label="Enter new password"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      Adornment="Adornment.End"
                                      Style="background-color: var(--mud-palette-background-grey);"/>
                    </MudItem>

                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <MudItem xs="12">
                            <MudAlert Severity="Severity.Error" Dense="true" Variant="Variant.Filled"
                                      Class="rounded-lg">
                                <small>@_errorMessage</small>
                            </MudAlert>
                        </MudItem>
                    }

                    <MudItem xs="12" Class="mt-4">
                        <MudStack Spacing="1">
                            <MudButton ButtonType="ButtonType.Submit"
                                       Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       FullWidth="true"
                                       Disabled="@_isProcessing"
                                       Style="height: 44px; font-weight: bold;">
                                @if (_isProcessing)
                                {
                                    <MudProgressCircular Size="Size.Small" Indeterminate="true"/>
                                }
                                else
                                {
                                    <span>Update Password</span>
                                }
                            </MudButton>
                            <MudButton Variant="Variant.Text"
                                       Color="Color.Default"
                                       Size="Size.Small"
                                       FullWidth="true"
                                       OnClick="@(() => NavigationManager.NavigateTo("/"))">
                                Cancel
                            </MudButton>
                        </MudStack>
                    </MudItem>
                </MudGrid>
            </EditForm>
        </div>
    </MudPaper>
</MudContainer>

@code {
    private readonly ChangePasswordViewModel _model = new();
    private string _newPassword = string.Empty;
    private string _errorMessage = string.Empty;
    private bool _isProcessing;
    
    private async Task HandlePasswordChange()
    {
        if (_model.OldPassword != _model.OldPasswordConfirm)
        {
            _errorMessage = "Current password confirmation does not match.";
            return;
        }

        _isProcessing = true;
        _errorMessage = string.Empty;

        try
        {
            var command = new ChangePasswordCommand(_model.OldPassword, _newPassword);
            var result = await CommandSender.SendAsync(command);

            if (!result.IsSuccessFull)
            {
                _errorMessage = result.Message;
                return;
            }

            Snackbar.Add("Your password has been changed!", Severity.Success);
        }
        catch (Exception)
        {
            _errorMessage = "An error occurred.";
        }
        finally
        {
            _isProcessing = false;
        }
    }

    public class ChangePasswordViewModel
    {
        public string OldPassword { get; set; } = string.Empty;
        public string OldPasswordConfirm { get; set; } = string.Empty;
    }

}