@page "/chat"
@using Presentation.Web.Components.Elements
@using Presentation.Web.Models

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4 d-flex flex-column" Style="height: 100%; min-height: 0;">

    <MudGrid Style="flex-grow: 1; min-height: 0;" Class="pb-4">

        <ChatUserComponent OnUserSelected="@SetSelectedUser"></ChatUserComponent>

        <ChatMessageComponent SelectedUser="_selectedUser"></ChatMessageComponent>

    </MudGrid>
</MudContainer>

@code {
    private UserModel? _selectedUser;

    private async Task SetSelectedUser(UserModel? user)
    {
        _selectedUser = user;
        await Task.CompletedTask;
    }

}